<div class="row">
 <div class="col-md-12">
 <h1>{{title}}<h1>
 <hr />
 </div>
</div>
<div class="row">
 <div class="col-md-12">
     <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if data}}
                    {{#each data}}
                    <tr>
                        <td><a href="/department/{{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/employees?department={{departmentId}}">{{departmentName}}</a></td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr><td>No Data Available</td></tr>
                    {{/if}}
                </tbody>
            </table>
        </div>

 </div>
</div>