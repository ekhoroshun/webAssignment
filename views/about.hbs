{{#each data}}
<div class="row">
	<div class="col-md-12">
		<div class="commentSubject">
			{{subject}}
		</div>
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					{{commentText}}
					<br />
					<br />
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					Posted on: {{postedDate}} by <a href="mailto:{{authorEmail}}">{{authorName}}</a>
				</div>
			</div>

			{{#each replies}}
			<div class="row">
				<div class="col-md-12">
					<br />
					<div class="well">
						<div class="row">
							<div class="col-md-12">
								{{commentText}}
								<br />
								<br />
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
